<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="com.inquiry.mapper.ICommentsMapper">
	<insert id="insertComments" parameterType="com.inquiry.dto.CommentsDTO">
		INSERT INTO comments (com_content, member_id, inquiry_id)
			VALUES (#{com_content}, #{member_id}, #{inquiry_id})
	</insert>
	
	<select id="getComments" parameterType="Long"
		resultType="com.inquiry.dto.CommentsDTO">
		SELECT * FROM comments
		WHERE com_id = #{com_id}
	</select>
	
	<select id="selectComments" parameterType="Long"
		resultType="com.inquiry.dto.CommentsDTO">
		SELECT * FROM comments
		WHERE inquiry_id = #{inquiry_id}
	</select>
	
	<update id="updateComments" parameterType="com.inquiry.dto.CommentsDTO">
		UPDATE comments SET
			com_content = #{com_content}
		WHERE com_id = #{com_id}
	</update>
	
	<delete id="deleteComments" parameterType="Long">
		DELETE FROM comments 
		WHERE com_id = #{com_id}
	</delete>
</mapper>